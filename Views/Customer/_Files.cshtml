@{
Layout = null;
}
<div class="row mx-auto">
    <div class="d-flex align-items-center justify-between mx-auto col-11 justify-content-between">
        <h2>Files</h2>
    </div>
    <div class="card shadow-sm col-11 mx-auto mb-10 mt-5">
        <div class="card-header mt-5 customer-form__inner row align-items-center">
            <div class="my-3">
                <label for="formFile" class="form-label text-primary">Files from projects and tasks linked to the
                    customer are not shown on this table.</label>
                <input class="form-control" type="file" id="formFile">
            </div>
            <div class="row py-5 mx-auto">
                <select class="form-select col" aria-label="Page Select">
                    <option selected="" value="5">Page</option>
                    <option value="10">10</option>
                    <option value="25">25</option>
                    <option value="100">100</option>
                    <option value="">All</option>
                </select>
                <div class="btn-group col px-0">
                    <button
                        class="btn btn-primary customer-form__inner__export-btn d-flex align-items-center justify-content-center">Export</button>
                    <button class="btn btn-light refresh-btn d-flex align-items-center justify-content-center"
                        id="refresh-btn">
                        <i class="fas fa-sync"></i>
                    </button>
                    <button
                        class="btn btn-light customer-form__inner__export-btn d-flex align-items-center justify-content-center">
                        <a href="#" class="d-flex align-items-center text-dark">
                            <i style="height: 15px;" class="fa-regular fa-plus me-1"></i>
                            New
                        </a>
                    </button>
                    <button class="btn btn-light refresh-btn d-flex align-items-center justify-content-center"
                        id="refresh-btn">
                        <i class="fa fa-filter"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-row-dashed table-row-gray-300 gy-7 align-items-center">
                    <thead>
                        <tr class="fw-bold fs-6 text-gray-800">
                            <th>File</th>
                            <th>Show to customers area</th>
                            <th>Date Uploaded</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <span>
                                    <i class="fas fa-file-pdf">Uploaded File</i>
                                </span>
                            </td>
                            <td>
                                <label class="customer-switch">
                                    <input type="checkbox" checked="" wfd-id="id21">
                                    <span class="customer-slider"></span>
                                </label>
                            </td>
                            <td>
                                <span class="text-dark">2023-08-10 02:04:31</span>
                            </td>
                            <td>
                                <i style="width: 26px; height: 26px; font-size: 18px; cursor:pointer;"
                                    class="fas fa-envelope"></i>
                                <i style="width: 26px; height: 26px; font-size: 18px; cursor:pointer;"
                                    class="fas fa-edit"></i>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="row pt-5 mx-auto">
                <div
                    class="col-sm-12 col-md-5 d-flex align-items-center justify-content-center justify-content-md-start">
                    <div class="row mx-2 align-items-center flex-column pb-5 text-center">
                        Toplam 48630 Kayıttan
                        <input value="1" style="scale:0.8; max-width: 100px;" type="text" class="form-control col mx-3"
                            wfd-id="id38">
                        arası gösteriliyor
                    </div>
                </div>
                <div class="col-sm-12 col-md-7 d-flex align-items-center justify-content-center justify-content-md-end">
                    <div class="dataTables_paginate paging_simple_numbers" id="kt_ecommerce_products_table_paginate">
                        <ul class="pagination">
                            <li class="paginate_button page-item previous disabled"
                                id="kt_ecommerce_products_table_previous">
                                <a href="#" aria-controls="kt_ecommerce_products_table" class="page-link pager-page"
                                    page="1">
                                    <i class="fa-solid fa-angles-left"></i>
                                </a>
                            </li>
                            <li class="paginate_button page-item">
                                <a href="#" aria-controls="kt_ecommerce_products_table" class="page-link pager-page"
                                    page="0">
                                    <i class="fa-solid fa-angle-left"></i>
                                </a>
                            </li>
                            <li class="paginate_button page-item">
                                <a href="#" page="1" class="page-link pager-page active">1</a>
                            </li>
                            <li class="paginate_button page-item">
                                <a href="#" page="2" class="page-link pager-page ">2</a>
                            </li>
                            <li class="paginate_button page-item">
                                <a href="#" page="3" class="page-link pager-page ">3</a>
                            </li>
                            <li class="paginate_button page-item next ">
                                <a class="page-link pager-page" href="#" page="2">
                                    <i class="fa-solid fa-angle-right"></i>
                                </a>
                            </li>

                            <li class="paginate_button page-item">
                                <a class="page-link pager-page" href="#" page="4863">
                                    <i class="fa-solid fa-angles-right"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>